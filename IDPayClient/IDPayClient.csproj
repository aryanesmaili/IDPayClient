<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>IDPayClient</Title>
    <Authors>AryanEsmaili</Authors>
    <Description>IDPay documentation implemented in .NET.</Description>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/aryanesmaili/IDPayClient</RepositoryUrl>
    <PackageProjectUrl>https://github.com/aryanesmaili/IDPayClient</PackageProjectUrl>
    <PackageTags>IDPay;IDPayNet;IDPayASP;IDPayASPCore;IDPayNetCore</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
